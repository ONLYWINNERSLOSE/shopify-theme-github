{% liquid
  assign metaobject = block.settings.metaobject
  assign text_field = block.settings.text_field | default: 'text'
  assign link_field = block.settings.link_field | default: 'link'
  assign link_url = ''
  assign text_markup = ''

  if metaobject != blank
    assign text_metafield = metaobject[text_field]
    assign link_metafield = metaobject[link_field]

    if link_metafield != blank
      assign link_value = link_metafield.value
      if link_value.url
        assign link_url = link_value.url
      else
        assign link_url = link_value
      endif
    endif

    if link_url != blank
      assign link_text = text_metafield.value | default: ''
      if link_text == blank and text_metafield != blank
        assign link_text = text_metafield | strip_html
      endif
      assign link_text = link_text | strip_html
      if link_text != blank
        capture text_markup
          <a class="metaobject-link__link" href="{{ link_url }}">{{ link_text }}</a>
        endcapture
      endif
    elsif text_metafield != blank
      capture text_markup
        {{ text_metafield | metafield_tag }}
      endcapture
    endif
  endif

  if text_markup == blank
    assign text_markup = block.settings.fallback_text
  endif
%}

{% if text_markup != blank %}
  {% render 'text', block: block, fallback_text: text_markup %}
{% endif %}

{% stylesheet %}
  .metaobject-link__link {
    color: inherit;
  }
{% endstylesheet %}

